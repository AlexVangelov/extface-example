<div class="page-header nav">
  <%= link_to 'Sign in', new_shop_session_path, class: 'btn btn-default navbar-btn pull-right' %>
  <h2 class='navbar-text'>
    Shop &raquo; Sign up
  </h2>
</div>
<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' } do |f| %>
  <%= devise_error_messages! %>

  <%= form_group f, :name, :text_field, autofocus: true %>

  <%= form_group f, :password, :password_field, autocomplete: "off" %>
  
  <%= form_group f, :password_confirmation, :password_field, autocomplete: "off" %>

  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-10 col-md-8'>
      <%= f.submit "Sign up", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
